# CoffeeDropMonitor environment configuration
# Copy this file to .env and fill values as needed.

# Firebase service account credentials
GOOGLE_APPLICATION_CREDENTIALS=C:\path\to\service-account.json

# Firestore project/collection
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_COLLECTION=coffees
# Tried coffees collection (protected)
FIREBASE_TRIED_COLLECTION=coffees_tried

# Local SQLite cache path
COFFEE_DB=coffee_firestore.db

# Notifications (ntfy)
NTFY_TOPIC=
NTFY_SERVER=https://ntfy.sh

# Frontend deep-link base
SITE_BASE_URL=
NTFY_CLICK_URL=
